<Window x:Class="PointGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointGenerator"
        xmlns:h="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="Points generator" Height="747.822" Width="1314.976" WindowStartupLocation="CenterScreen" WindowState="Maximized" >

    <Grid Margin="293,0,2,0" x:Name="grid1">
        <Grid.RowDefinitions>
            <RowDefinition Height="460*"/>
            <RowDefinition Height="259*"/>
        </Grid.RowDefinitions>

        <h:HelixViewport3D x:Name="ViewPort1" Grid.RowSpan="2" Margin="-286,0,0,0" MouseDown="ViewPort1_MouseDown">
            <h:DefaultLights/>
        </h:HelixViewport3D>
        <Grid HorizontalAlignment="Left" Height="100" Margin="-286,0,0,0" VerticalAlignment="Top" Width="100"/>
        <GroupBox x:Name="groupBox1" Header="Generate points" HorizontalAlignment="Left" Height="183" Margin="-286,0,0,0" VerticalAlignment="Top" Width="212">
            <Grid HorizontalAlignment="Left" Height="147" VerticalAlignment="Top" Width="224" Margin="0,0,-2,-3">
                <Label x:Name="labelX" Content="X" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label x:Name="labelY" Content="Y" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Label x:Name="labelZ" Content="Z" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.529,1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="textBoxMinX" HorizontalAlignment="Left" Height="23" Margin="34,11,0,0" TextWrapping="Wrap" Text="-20" VerticalAlignment="Top" Width="37" RenderTransformOrigin="-0.483,0.348" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="textBoxMaxX" HorizontalAlignment="Left" Height="23" Margin="80,11,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="37" RenderTransformOrigin="-0.483,0.348" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="textBoxMinY" HorizontalAlignment="Left" Height="23" Margin="34,39,0,0" TextWrapping="Wrap" Text="-30" VerticalAlignment="Top" Width="37" RenderTransformOrigin="-0.483,0.348" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="textBoxMaxY" HorizontalAlignment="Left" Height="23" Margin="80,39,0,0" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="37" RenderTransformOrigin="-0.483,0.348" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="textBoxMinZ" HorizontalAlignment="Left" Height="23" Margin="34,67,0,0" TextWrapping="Wrap" Text="-10" VerticalAlignment="Top" Width="37" RenderTransformOrigin="-0.483,0.348" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="textBoxMaxZ" HorizontalAlignment="Left" Height="23" Margin="80,67,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="37" RenderTransformOrigin="-0.483,0.348" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                <Button x:Name="buttonGeneratePoints" Content="Generate" HorizontalAlignment="Left" Margin="34,95,0,0" VerticalAlignment="Top" Width="83" Click="buttonGenerateLines_Click"/>
                <Label x:Name="labelCount" Content="Count" HorizontalAlignment="Left" Margin="132,0,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="textBoxCountPoint" HorizontalAlignment="Left" Height="23" Margin="132,26,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="52" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="0.31,0.391"/>
                <Button x:Name="buttonDefault" Content="Set default" HorizontalAlignment="Left" Margin="34,120,0,0" VerticalAlignment="Top" Width="83" Click="buttonDefault_Click"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBoxPolygon" Header="Generate polygon" HorizontalAlignment="Left" Height="116" Margin="-286,188,0,0" VerticalAlignment="Top" Width="212">
            <Grid HorizontalAlignment="Left" Height="125" Margin="0,0,-2,-12" VerticalAlignment="Top" Width="202">
                <TextBox x:Name="textBoxCountPolygonPoints" HorizontalAlignment="Left" Height="23" Margin="87,38,0,0" TextWrapping="Wrap" Text="4" VerticalAlignment="Top" Width="34" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button x:Name="buttonGeneratePolygon" Content="Generate" HorizontalAlignment="Left" Margin="53,66,0,0" VerticalAlignment="Top" Width="101" Height="25" Click="buttonGeneratePolygon_Click"/>
                <Label x:Name="labelCountPolygon" Content="Count of vertex" HorizontalAlignment="Left" Margin="53,7,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
